
@{
    Layout = null;
    ViewBag.Title = "Authorize";
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
}

<!DOCTYPE html>
<html>
<head>
    <title></title>
    <meta charset="utf-8">
    <style>
        html, body {
            align-items: center;
            align-content:center;
            font-size: Arial,sans-serif;
            margin: 0px;
            padding: 0px;
            font-size: 13px;
            align-items: center;
            background-color: black;
        }

        #content {
            position: absolute;
            top: 15%;
            width: 500px;
            height: 250px;
            background: #008866;
            background-color: #f7f7f7;
            border-radius: 10px;
            box-shadow: 0 2px 2px rgba(0, 0, 0, 0.3);
        }

        #formInput {
            position: absolute;
            top: 40px;
            left: 115px;
            width: 270px;
        }

        #int1, #int2, #int3 {
            display: block;
            width: 100%;
            height: 40px;
            margin-bottom: 10px;
            border: 1px solid #d9d9d9;
            border-top: 1px solid #c0c0c0;
            box-sizing: border-box;
            border-radius: 1px;
            font-size: 16px;
        }

        #int1, #int2 {
            padding: 0 8px;
            border-radius: 10px;
        }

        #int3 {
            border: 1px solid #3079ed;
            color: #fff;
            text-shadow: 0 1px rgba(0,0,0,0.3);
            background-color: #357ae8;
            cursor: pointer;
            border-radius: 10px;
            background-image: -webkit-linear-gradient(top,#4d90fe,#4787ed);
        }

        #link {
            display: inline-block;
            color: #427fed;
            text-decoration: none;
            margin-bottom: 10px;
        }

        :hover#int3 {
            border: 1px solid #2f5bb7;
        }
    </style>
</head>
<body>
    <div class="text-center text-info">
        <h2>Authorization</h2>
    </div> 
    <div id="content" >
        <form method="post" id="formInput">
            <input id="int1" type="text" placeholder="login">
            <input id="int2" type="password" name="par" placeholder="Password">
            <input id="int3" type="button" value="GO">
            <a id="link" href="https://www.google.com.ua/">Help</a>
        </form>
    </div>
</body>
</html>

